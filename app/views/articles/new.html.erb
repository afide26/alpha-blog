<h1>Create an article</h1>

<%= form_for @article do |f| %>
	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field  :title, class:"form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_area  :description, class:"form-control" %>
	</div>
	<div class="actions">
		<%= f.submit class:"btn btn-lg btn-default" %>
	</div>
<% end %>